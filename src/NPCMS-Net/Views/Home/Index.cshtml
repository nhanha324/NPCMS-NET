<html xmlns="http://www.w3.org/1999/xhtml" ng-app="NPCMS_Net">
<head>
    <title>NPCMS-Net</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!--link href="/bower_components/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" />-->
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/bootstrapcerulean.css" rel="stylesheet" />
    <base href="/" />
</head>
<body ng-controller="AccountController as account">
    <div class="container">
        <div ng-show="account.isLoggedIn()">
            Hello: {{account.getUserName()}}
        </div>
            <nav class="navbar navbar-inverse ">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" ui-sref="home">NPCMS App</a>
                    </div>

                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
                        <ul class="nav navbar-nav">
                            <li class="active"><a ui-sref="home">Home <span class="sr-only">(current)</span></a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Pages <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a ui-sref="pages">Pages</a></li>
                                    <li><a ui-sref="layouts">Layouts</a></li>
                                </ul>
                            </li>
                            <li><a ui-sref="things">Things</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" 
                                   role="button" aria-expanded="false">Users <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a ui-sref="users">Users </a></li>
                                    <li><a ui-sref="roles">Roles </a></li>
                                </ul>
                            </li>
                            <li><a ui-sref="extensions">Extensions </a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <!--li><a ui-sref="register"><span class="glyphicon glyphicon-user"></span> Register</a></!--> 
                            <li><a ui-sref="home" ng-click="account.logout()" ng-show="account.isLoggedIn()"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                            <li><a ui-sref="login" ng-show="!account.isLoggedIn()"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <hr />

            <ui-view></ui-view>
        </div>

    <!-- Library Files -->
    <script src="/bower_components/angular/angular.js"></script>
    <script src="/bower_components/angular-resource/angular-resource.js"></script>
    <script src="/bower_components/angular-animate/angular-animate.js"></script>
    <script src="/bower_components/angular-touch/angular-touch.js"></script>
    <script src="/bower_components/angular-bootstrap/ui-bootstrap-tpls.js"></script>
    <script src="/bower_components/angular-ui-router/release/angular-ui-router.js"></script>
   
    <script src="~/bower_components/jquery/dist/jquery.js"></script>
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.js"></script>
   


    <!-- App Files-->
    <script src="/ngapp/app.js"></script>   
    <script src="/ngapp/controllers/controllers.js"></script>
    <script src="~/ngapp/controllers/userController.js"></script>
    <script src="/ngapp/services/services.js"></script>
    


    <!-- Security -->
    <script src="/ngapp/controllers/accountcontroller.js"></script>
    <script src="/ngapp/services/accountservice.js"></script>

</body>
</html>
